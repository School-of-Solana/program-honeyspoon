{
  "name": "the_fool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:local": "NEXT_PUBLIC_USE_SOLANA=false next dev",
    "dev:solana": "NEXT_PUBLIC_USE_SOLANA=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" && eslint --fix .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:unit": "NODE_ENV=test tsx --test tests/unit/*.test.ts",
    "test:unit:wallet": "tsx --test tests/unit/walletLogic.test.ts tests/unit/walletStore.test.ts",
    "test:unit:game": "tsx --test tests/unit/gameLogic.test.ts",
    "test:unit:integration": "tsx --test tests/unit/walletGameIntegration.test.ts",
    "test:unit:server": "tsx --test tests/unit/serverActions.test.ts",
    "test:unit:edge": "tsx --test tests/unit/edgeCases.test.ts",
    "test:chain": "node test-solana-chain.mjs",
    "setup:check": "node test-solana-chain.mjs"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.95.8",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.90.2",
    "kaplay": "^3001.0.19",
    "nes.css": "^2.2.1",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-use": "^17.6.0",
    "use-debounce": "^10.0.6",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/bn.js": "^5.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tslint": "^5.20.1",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
