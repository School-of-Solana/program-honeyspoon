{
  "name": "dive-game",
  "version": "1.0.0",
  "description": "Dive game smart contract for Solana",
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "cargo test --package dive_game --lib",
    "test:integration": "anchor test --skip-build",
    "test:litesvm": "anchor build && ts-mocha -p ./tsconfig.json tests/litesvm/**/*.ts",
    "test:litesvm:only": "ts-mocha -p ./tsconfig.json -t 1000000 tests/litesvm/**/*.ts",
    "test:all": "npm run test:unit && npm run test",
    "build": "anchor build",
    "build:verifiable": "anchor build --verifiable",
    "deploy:localnet": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "clean": "anchor clean && cargo clean",
    "verify": "npm run lint && npm run test:unit",
    "idl:build": "anchor build --idl idl",
    "keys:generate": "anchor keys list",
    "localnet": "solana-test-validator",
    "logs": "solana logs",
    "init-localnet": "ts-node scripts/init-localnet.ts",
    "setup:localnet": "anchor build && anchor deploy && npm run init-localnet",
    "dev:full": "npm run setup:localnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.32.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/mocha-each": "^2.0.4",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "chai": "^4.3.4",
    "chai-jest-snapshot": "^2.0.0",
    "eslint": "^9.39.1",
    "litesvm": "^0.3.3",
    "mocha": "^9.0.3",
    "mocha-each": "^2.0.1",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^5.9.3"
  }
}
